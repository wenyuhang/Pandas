<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pandas.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RadioGroup
            android:id="@+id/home_radiogroup"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:textColor="@color/black"
            >
            <RadioButton
                android:id="@+id/home_page"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/tab_home_normal"
                android:gravity="center"
                android:background="@drawable/radio_bg"
                android:checked="true"
                android:text="首页"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_PandaLive"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_live_normal"
                android:text="熊猫直播"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_RollVideo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_culture_normals"
                android:text="滚滚视频"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_PandaBroadcast"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_eye_normal"

                android:text="熊猫文化"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/home_LiveChina"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/tab_live_china_normal"
                android:button="@null"
                android:gravity="center"
                android:text="直播中国"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"
                />
        </RadioGroup>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/home_radiogroup"
            android:id="@+id/home_framelayout"></FrameLayout>
    </RelativeLayout>
</LinearLayout>
