<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pandas.HomeActivity">
    <RelativeLayout
        android:id="@+id/home_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y80"
            android:src="@mipmap/panda_sign"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x10"/>
        <ImageView
            android:id="@+id/home_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/person_sign"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/home_text"
            android:textSize="@dimen/x38"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/home_interaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hudong_sign"
            android:layout_toLeftOf="@id/home_person"
            android:layout_marginRight="@dimen/x20"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

        <RadioGroup
            android:id="@+id/home_radiogroup"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:textColor="@color/black"
            >
            <RadioButton
                android:id="@+id/home_page"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/tab_home_normal"
                android:gravity="center"
                android:background="@drawable/radio_bg"
                android:checked="true"
                android:text="首页"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_PandaLive"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_live_normal"
                android:text="熊猫直播"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_RollVideo"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_culture_normals"
                android:text="熊猫文化"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/home_PandaBroadcast"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:button="@null"
                android:gravity="center"
                android:drawableTop="@mipmap/tab_panda_eye_normal"

                android:text="熊猫观察"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/home_LiveChina"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:drawableTop="@mipmap/tab_live_china_normal"
                android:button="@null"
                android:gravity="center"
                android:text="直播中国"
                android:drawablePadding="5dp"
                android:background="@drawable/radio_bg"
                android:textSize="12sp"
                />
        </RadioGroup>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/home_radiogroup"
            android:layout_below="@id/home_relativelayout"
            android:id="@+id/home_framelayout"></FrameLayout>

</RelativeLayout>
