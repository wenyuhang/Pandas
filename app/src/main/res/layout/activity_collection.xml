<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pandas.personal.CollectionActivity">


    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">
        <ImageButton
            android:layout_centerVertical="true"
            android:id="@+id/fanhui"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:background="@mipmap/fenlei_fanhui"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:gravity="center"
            android:textSize="@dimen/x50"
            android:textColor="#ffffff"
            android:text="@string/shouchang"

            />

    </RelativeLayout>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/phone"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120"
            android:text="直播"
            android:gravity="center"
            android:textSize="@dimen/x30"
            android:button="@null"
            android:checked="true"
            android:textColor="@color/pandalive_textchange"
            android:background="@drawable/pandalive_radio"
            />

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="@dimen/y120"></View>

        <RadioButton
            android:id="@+id/mailbox"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y120"
            android:text="精彩看点"
            android:textColor="@color/pandalive_textchange"
            android:gravity="center"
            android:button="@null"
            android:textSize="@dimen/x30"
            android:background="@drawable/pandalive_radio"/>
    </RadioGroup>


    <FrameLayout
        android:id="@+id/fram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>





</LinearLayout>
