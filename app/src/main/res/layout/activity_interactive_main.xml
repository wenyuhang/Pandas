<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_interactive_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pandas.personal.homeinteractive.InteractiveMainActivity">


    <RelativeLayout
        android:id="@+id/interactive_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/interactive_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_back_img"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="原创●互动"
            android:layout_centerInParent="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_below="@id/interactive_relativelayout"
        android:id="@+id/interactive_xrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>

</RelativeLayout>
