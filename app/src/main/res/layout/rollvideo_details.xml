<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efebeb"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:background="#5982e1"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_chevron_left_white_36dp"
            android:layout_centerVertical="true"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="熊猫频道《原创戏曲动画》"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y380">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="#ffffff"
        >
        <TextView
            android:id="@+id/rollvideo_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首播时间："
            android:textSize="20sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="栏目介绍"
            android:textSize="15sp"
            android:textColor="#4e4646"
            android:layout_margin="@dimen/x10"
            android:layout_below="@id/rollvideo_time_text"
            android:id="@+id/rollvideo_jieshao_text"
            />
<ImageView
    android:id="@+id/rollvideo_details_show_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/com_facebook_tooltip_blue_bottomnub"
    android:layout_centerInParent="true"
    android:layout_below="@id/rollvideo_time_text"
    android:layout_marginTop="@dimen/x20"

    />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/visibility_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y300"
        android:background="#ffffff"
        android:visibility="gone"
        android:orientation="vertical"

        >

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:layout_marginTop="@dimen/x20"
    android:layout_marginLeft="@dimen/x20"
    android:layout_marginRight="@dimen/x20"
    android:background="#ffffff"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="高清完整"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="#000000"
        />

</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.androidkun.PullToRefreshRecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y350"
       android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        >

    </com.androidkun.PullToRefreshRecyclerView>
</ScrollView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:layout_alignParentBottom="true"
    android:background="#ffffff"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/collect_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/collect_no"
        android:layout_marginLeft="@dimen/x180"
        />
<ImageView
    android:id="@+id/share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/share"
    android:layout_marginLeft="@dimen/x20"
    />

</LinearLayout>
</RelativeLayout>