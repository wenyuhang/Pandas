<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#e8e8e8"></LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/x10">
        <ImageView
            android:id="@+id/pandalive_img"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y140"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/y40"
            android:layout_marginTop="@dimen/y102"
            android:background="@mipmap/lpanda_bottom_gra">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lpanda_live_layer"
                android:drawablePadding="@dimen/x10"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:text="Live"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/pandalive_title"
        android:layout_width="@dimen/x200"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/homepage_text"
        android:layout_marginBottom="@dimen/y20"/>

</LinearLayout>