<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/special_planning"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y80"
            android:textSize="@dimen/homepage_text"
            android:textColor="@color/colorBlue"
            android:gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#e8e8e8"></LinearLayout>
        <ImageView
            android:id="@+id/special_planning_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y350"
            android:padding="@dimen/x10"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/special_planning_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/homepage_text"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/x5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y10"
        android:background="#e8e8e8"></LinearLayout>

</RelativeLayout>