<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/panda_culture_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y400">

    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/panda_culture_banner_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/panda_culture_banner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="50dp"
        android:text="1231313123"
        android:textColor="#ffffff" />
    <LinearLayout
        android:id="@+id/pointsLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="15dp"
        android:layout_marginRight="20dp">
    </LinearLayout>
</RelativeLayout>
