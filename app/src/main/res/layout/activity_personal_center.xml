<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pandas.personal.PersonalCenterActivity">


    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150">
        <ImageButton
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/fenlei_fanhui"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="@string/personalCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/gray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">

        <LinearLayout
            android:id="@+id/personalCenter_Signin"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="@dimen/x680"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:background="@mipmap/personal_login_head"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="@dimen/x300"
                android:layout_height="wrap_content"
                android:text="@string/personalCenter_Signin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="@dimen/x30"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@color/gray"></View>


        <LinearLayout
            android:id="@+id/personalCenter_History"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="@dimen/x680"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:background="@mipmap/personal_history_img"/>
            <TextView
                android:layout_width="@dimen/x450"
                android:layout_height="wrap_content"
                android:text="@string/personalCenter_History"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="@dimen/x30"/>
            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:background="@mipmap/personal_enter_img"

                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@color/gray"></View>


        <LinearLayout
            android:id="@+id/personalCenter_Collection"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="@dimen/x680"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:background="@mipmap/personal_shoucang_img"/>
            <TextView
                android:layout_width="@dimen/x450"
                android:layout_height="wrap_content"
                android:text="@string/personalCenter_Collection"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="@dimen/x30"/>
            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:background="@mipmap/personal_enter_img"
                />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:background="@color/gray"></View>


        <LinearLayout
            android:id="@+id/personalCenter_set"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_width="@dimen/x680"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y80"
                android:background="@mipmap/personal_set_img"/>
            <TextView
                android:layout_width="@dimen/x450"
                android:layout_height="wrap_content"
                android:text="@string/personalCenter_set"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="@dimen/x30"/>
            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:background="@mipmap/personal_enter_img"

                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
